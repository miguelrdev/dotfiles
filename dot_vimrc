set nocompatible
set number
set cursorline
set cursorcolumn
set wildmenu
set wildmode=list:longest
syntax on
filetype on
filetype plugin on
filetype indent on
colorscheme jellybeans

" MAPPINGS
let mapleader = ","

" VIMSCRIPT
autocmd BufNewFile,BufFilePre,BufRead *.md set filetype=markdown.pandoc
autocmd BufRead,BufNewFile *.md setlocal spell

" PLUGINS
call plug#begin()
Plug 'c9s/perlomni.vim'
Plug 'preservim/nerdcommenter'
Plug 'preservim/nerdtree'
Plug 'vim-airline/vim-airline'
Plug 'vim-airline/vim-airline-themes'
call plug#end()

" PLUGIN SETTINGS
let g:airline#extensions#tabline#enabled = 1 " List buffers at top of terminal
let g:airline#extensions#tabline#buffer_nr_show = 1 " Show buffer numbers in the list
